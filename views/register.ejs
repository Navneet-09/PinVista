<% include ./partials/header.ejs %>
<div class="w-full min-h-screen md:min-h-full bg-zinc-300 flex flex-row items-center justify-center py-20 bg-[url('./images/board-2.png')] bg-cover">
    <div class="w-90  min-h-full md:w-70 sm:w-100 px-20 py-5 bg-white bg-center bg-cover shadow-2xl rounded-lg">
      <div class="mx-10 w-full items-center">
        <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" class="w-10 h-10 mx-36 mb-3" alt="pin logo" class="img1" />
      </div>
      <h1 class="text-3xl leading-none tracking-tighter capitalize text-center font-semibold text-zinc-700">Welcome to pinterest</h1>
      <form action="/register" method="post">
        <input class="block mt-5 w-full px-3 py-2 border-2 rounded-md" type="text" name="name" placeholder="name">
        <input class="block mt-3 w-full px-3 py-2 border-2 rounded-md" type="text" name="username" placeholder="username">
        <input class="block mt-3 w-full px-3 py-2 border-2 rounded-md" type="email" name="email" placeholder="email">
        <input class="block mt-3 w-full px-3 py-2 border-2 rounded-md" type="password" name="password" placeholder="password">
        <input class="block mt-3 w-full px-3 py-2 border-2 rounded-full bg-red-600 text-white" type="submit" value="Create new Account">
        <p class="text-xs font-semibold text-zinc-700 mt-10 text-center w-3/4 mx-auto">
            By continuing, you agree to Pinterest's
          <b>Terms of Service, Privacy policy.</b>
          </p>
      </form>
      <a href="/" class="inline-block mt-7 text-sm w-full font-semibold text-zinc-700 text-center">Already on pinterest ? <span class="hover:text-red-600">Login</span></a>
    </div>
  </div>
<% include ./partials/footer.ejs %>