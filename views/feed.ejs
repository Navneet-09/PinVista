<% include ./partials/header.ejs %>
<div class="w-full min-h-screen px-10 py-8 text-black bg-gradient-to-tl from-red-200 to-orange-100">
    <h3 class="mt-2 text-2xl mb-2 font-semibold text-red-500 decoration-red-600/30">QUICK FEEDS</h3>
    <br />
    <div class="cards flex flex-wrap gap-10 mt-5 mx-10">
        <!-- cards flex flex-wrap gap-10 mt-5 mx-10 -->
        <% post.reverse().forEach(function(elem,index){ %>
        <div class="w-56 h-fit bg-transparent rounded-lg overflow-hidden text-black hover:scale-125 transition duration-350 hover:ease-in">
            <div class="<%= index % 2 === 0 ? 'w-full h-60' : 'w-full h-72' %> border shadow-xl">
                <a href="/singlepost/:<%= elem.id %>">
                    <img class="w-full h-full object-cover rounded-lg" src="/images/uploads/<%= elem.image %>" alt="">
                </a>
            </div>
            <h3 class="mt-2 text-2xl px-2"><%= elem.title %></h3>
            <p class="mb-1 px-2"><%= elem.description %></p>
        </div>
        <% }) %>
    </div>
</div>
<% include ./partials/footer.ejs %>